<div class="container-fluid">

	<div class="raw-fluid">
		<div class="span12">
			{{>config-navigation}}
		</div>
	</div>

	<div class="raw">
		<div class="span12">
			<div class="raw-fluid">

				<div class="block">
					<div class="block-header">
						<div class="block-header-title pull-left">
							Users
						</div>
						<div class="pull-right">
							<a class="btn btn-orange" href="add"><i
							class="icon-plus icon-white"> </i> Add User</a>
						</div>
					</div>

					<div class="block-body block-body container-fluid raw-fluid">

						<div class="span11">

							<table cellpadding="0" cellspacing="0" border="0"
							class="table table-striped table-bordered" id="main-table">
								<thead>
									<tr>
										<th>First Name</th>
										<th>Last Name</th>
										<th>e Mail</th>
										<th>Mobile</th>
										<th>Action</th>
									</tr>
								</thead>
								<tbody>
									{{#data.users}}
									<tr>
										<td>{{firstName}}</td>
										<td>{{lastName}}</td>
										<td>{{email}}</td>
										<td>{{mobile}}</td>
										<td class="center"><a href="edit" title="Edit"
										class="icon-edit"> </a><a href="#assignGroup" data-user="{{email}}" data-name="{{firstName}} {{lastName}}" data-toggle="modal" title="Assign Groups"
										class="icon-cog add-group-link"> </a><a href="edit" title="Delete"
										class="icon-remove"> </a></td>
									</tr>
									{{/data.users}}
								</tbody>
							</table>

						</div>

					</div>

				</div>

			</div>

		</div>

	</div>

</div>

<!-- Modal Features -->
<div id="assignGroup" class="modal hide" tabindex="-1" role="dialog" aria-hidden="true"  style="width:700px">

	
		<div class="modal-header">
			<button class="close" data-dismiss="modal">
				x
			</button>
			<h3 id="assign-group-heading">Assign Groups</h3>
		</div>
		<div class="modal-body">

			<div class="control-group">
				<label class="control-label" for="inputMobile">Group</label>
				<div class="controls raw">
					<div class="span6">
						<select multiple="multiple" size="10" id="inputGroups" name="inputGroups" class='duallistbox'>
							{{#data.groups}}
							<option value="{{this}}">{{this}}</option>
							{{/data.groups}}

						</select> 
					</div>

				</div>
			</div>

		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-dismiss="modal">Close</a>
			<a href="#" id="btn-assign-group" class="btn btn-orange" data-dismiss="modal">Assign</a>
		</div>

</div>

