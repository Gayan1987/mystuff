<div class="container-fluid">

	<div class="raw-fluid">
		<div class="span12">{{>config-navigation}}</div>
	</div>

	<div class="raw">
		<div class="span12">
			<div class="raw-fluid">

				<div class="block">
					<div class="block-header">
						<div class="block-header-title pull-left">Roles</div>
						<div class="pull-right">
							<a class="btn btn-orange" href="add"><i
								class="icon-plus icon-white"> </i> Add Role</a>
						</div>
					</div>

					<div class="block-body block-body container-fluid raw-fluid">

						<div class="span11">

							<table cellpadding="0" cellspacing="0" border="0"
								class="table table-striped table-bordered" id="main-table">
								<thead>
									<tr>
										<th>Name</th>
										<th>Action</th>
									</tr>
								</thead>
								<tbody>
									{{#data.groups}}
									<tr>
										<td>{{this}}</td>
										<td class="center">
											{{#compare ../contextData.user.role 'masteradmin'}}
												<a href="#assignPermissions" data-group="{{this}}"  data-toggle="modal" title="Assign Permissions"
												class="add-permission-link"><i class="icon-cog"> </i> Permissions </a>
											{{/compare}}										
										</td>
									</tr>
									{{/data.groups}}
								</tbody>
							</table>


						</div>

					</div>

				</div>

			</div>

		</div>

	</div>

</div>




<!-- Modal Permissions -->
<div id="assignPermissions" class="modal hide" tabindex="-1" role="dialog" aria-hidden="true"  style="width:700px">

	
		<div class="modal-header">
			<button class="close" data-dismiss="modal">
				x
			</button>
			<h3 id="assign-permission-heading"></h3>
		</div>
		<div class="modal-body">

			<div class="control-group">
								<label class="control-label" for="inputGroupId">Features:</label>
								<div class="controls">
									 <div id="tree3"> </div>
								</div>
			</div>

		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-dismiss="modal">Close</a>
			<a href="#" id="btn-add-features" class="btn btn-orange" data-dismiss="modal">Assign</a>
		</div>

</div>

